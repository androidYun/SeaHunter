<resources>

    <style name="UserAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textSize">14sp</item>
        <item name="android:windowBackground">@mipmap/bg_white</item>
        <item name="android:actionBarSize">44dp</item>
        <item name="actionBarSize">44dp</item>
        <item name="colorPrimary">@color/user_theme_color</item>
        <item name="colorPrimaryDark">@color/user_theme_color</item>
    </style>


    <style name="grayNoActionBarTheme" parent="NoActionBarTheme">
        <item name="android:windowBackground">@mipmap/bg_gray</item>
    </style>
    <style name="whiteTheme" parent="UserAppTheme">
        <item name="android:windowBackground">@mipmap/bg_white</item>
    </style>
    <style name="grayTheme" parent="UserAppTheme">
        <item name="android:windowBackground">@mipmap/bg_gray</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:windowBackground">@mipmap/bg_white</item>
    </style>

    <style name="BaseTextViewItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:drawableEnd">@mipmap/ic_arrow_right</item>
        <item name="android:background">@drawable/shape_base_item_background</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="baseBtnStyle">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_base_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!--Item布局的样式-->
    <style name="itemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape_base_item_background</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
    </style>

    <style name="itemTitleStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>

    </style>


    <style name="itemContentTextViewStyle">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
    </style>


    <style name="itemContentEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textColorHint">@color/color_9</item>
    </style>

    <!--全屏 dialog-->
    <style name="Dialog_FS">
           
        <item name="android:windowBackground">@android:color/transparent</item>
           
        <item name="android:windowFrame">@null</item>
           
        <item name="android:windowNoTitle">true</item>
           
        <item name="android:windowIsFloating">true</item>
           
        <item name="android:windowIsTranslucent">true</item>
           
        <item name="android:windowContentOverlay">@null</item>
           
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
           
        <item name="android:windowFullscreen">true</item>
           
        <item name="android:backgroundDimEnabled">true</item>
    </style>
</resources>
