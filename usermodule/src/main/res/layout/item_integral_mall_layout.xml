<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/cVIntegralShop"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_base_item_background"
    android:paddingTop="@dimen/default_padding"
    android:paddingBottom="@dimen/default_padding">

    <ImageView
        android:id="@+id/ivShopImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/ivShopImage"
        app:layout_constraintTop_toTopOf="@+id/ivShopImage"
        tools:text="智能手表电话蓝牙手环" />

    <TextView
        android:id="@+id/tvRedeemCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/default_margin"
        android:textColor="@color/color_c"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/tvShopIntegral"
        app:layout_constraintStart_toEndOf="@+id/ivShopImage"
        tools:text="234人已兑换" />

    <TextView
        android:id="@+id/tvShopIntegral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_bf0008"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivShopImage"
        app:layout_constraintStart_toEndOf="@+id/ivShopImage"
        tools:text="675" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_bf0008"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/tvShopIntegral"
        app:layout_constraintStart_toEndOf="@+id/tvShopIntegral"
        tools:text="积分" />

    <TextView
        android:id="@+id/tvNowRedeem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_now_redeem_background"
        android:gravity="center"
        android:text="立即兑换"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>