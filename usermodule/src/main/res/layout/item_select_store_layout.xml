<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cvSelectStore"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/ivStore"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_stores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvStoreName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:text="郑州 • 绿地新都会店"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_18"
        app:layout_constraintStart_toEndOf="@+id/ivStore"
        app:layout_constraintTop_toTopOf="@+id/ivStore" />

    <TextView
        android:id="@+id/tvStoreAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_8"
        android:drawableStart="@mipmap/ic_set_address"
        android:drawablePadding="@dimen/dp_8"
        android:textColor="@color/color_9"
        android:textSize="@dimen/sp_14"
        app:layout_constraintStart_toStartOf="@+id/tvStoreName"
        app:layout_constraintTop_toBottomOf="@+id/tvStoreName"
        tools:text="河南省郑州市郑东新区绿地新都会A座" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/line_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvStoreAddress"
        app:layout_constraintTop_toBottomOf="@+id/tvStoreAddress" />
</androidx.constraintlayout.widget.ConstraintLayout>