<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding">

    <ImageView
        android:id="@+id/ivWalletHead"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:background="@color/user_theme_color"
        android:paddingTop="@dimen/dp_3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvWalletTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_14"
        android:textColor="@color/color_3"
        android:textSize="@dimen/sp_16"
        app:layout_constraintStart_toEndOf="@+id/ivWalletHead"
        app:layout_constraintTop_toTopOf="@+id/ivWalletHead"
        tools:text="购买商品获得积分" />

    <TextView
        android:id="@+id/tvWalletTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:textColor="@color/color_9"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/tvWalletTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvWalletTitle"
        tools:text="2020-03-29  22:34:56" />

    <TextView
        android:id="@+id/tvWalletMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_bf0008"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+120" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/color_e2e2e2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvWalletTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvWalletTime" />

</androidx.constraintlayout.widget.ConstraintLayout>