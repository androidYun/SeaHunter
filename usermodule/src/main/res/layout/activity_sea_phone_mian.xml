<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rgpView" />

    <RadioGroup
        android:id="@+id/rgpView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rBtnSea"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/select_left_sidebar_tab_order"
            android:gravity="center"
            android:text="点餐"
            android:textColor="@drawable/main_bottom_bar_text_selector" />

        <RadioButton
            android:id="@+id/rBtnCar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/select_left_sidebar_tab_order"
            android:gravity="center"
            android:text="购物车"
            android:textColor="@drawable/main_bottom_bar_text_selector" />

        <RadioButton
            android:id="@+id/rBtnOrder"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/select_left_sidebar_tab_order"
            android:gravity="center"
            android:text="订单"
            android:textColor="@drawable/main_bottom_bar_text_selector" />

        <RadioButton
            android:id="@+id/rBtnMine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/select_left_sidebar_tab_order"
            android:gravity="center"
            android:text="我的"
            android:textColor="@drawable/main_bottom_bar_text_selector" />
    </RadioGroup>
</RelativeLayout>