<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="@dimen/default_padding"
    android:paddingEnd="@dimen/default_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvIntegralStatus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/user_theme_color"
            android:textSize="@dimen/sp_18"
            tools:text="待发货" />

        <TextView
            android:id="@+id/tvExchangeTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:textColor="@color/color_6"
            android:textSize="16dp"
            tools:text="2020-02-02  22:21:21" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f3f3f3" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/default_padding"
        android:paddingBottom="@dimen/default_padding">

        <ImageView
            android:id="@+id/ivShopImage"
            android:layout_width="66dp"
            android:layout_height="66dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            app:layout_constraintStart_toEndOf="@+id/ivShopImage"
            app:layout_constraintTop_toTopOf="@+id/ivShopImage"
            tools:text="智能手表电话蓝牙手环" />


        <TextView
            android:id="@+id/tvShopIntegral"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textColor="@color/user_theme_color"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivShopImage"
            app:layout_constraintStart_toEndOf="@+id/ivShopImage"
            tools:text="675" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/user_theme_color"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/tvShopIntegral"
            app:layout_constraintStart_toEndOf="@+id/tvShopIntegral"
            tools:text="积分" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>