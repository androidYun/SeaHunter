<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.address.AddAddressActivity">

    <LinearLayout style="@style/itemLayoutStyle">

        <TextView
            style="@style/itemTitleStyle"
            android:text="姓名" />

        <EditText
            style="@style/itemContentEditTextStyle"
            android:hint="请输入姓名" />
    </LinearLayout>

    <LinearLayout style="@style/itemLayoutStyle">

        <TextView
            style="@style/itemTitleStyle"
            android:text="手机号" />

        <EditText
            style="@style/itemContentEditTextStyle"
            android:hint="请填写手机号" />
    </LinearLayout>
    <LinearLayout style="@style/itemLayoutStyle">

        <TextView
            style="@style/itemTitleStyle"
            android:text="选择地址" />

        <EditText
            style="@style/itemContentEditTextStyle"
            android:hint="请填写手机号" />
    </LinearLayout>
    <LinearLayout style="@style/itemLayoutStyle">

        <TextView
            style="@style/itemTitleStyle"
            android:text="详细地址" />

        <EditText
            style="@style/itemContentEditTextStyle"
            android:hint="请填写详细地址" />
    </LinearLayout>

</LinearLayout>