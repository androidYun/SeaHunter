<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/default_padding">

    <ImageView
        android:id="@+id/ivIntegralHead"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@mipmap/ic_integral"
        android:paddingTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIntegralType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:textColor="@color/color_3"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/ivIntegralHead"
        app:layout_constraintTop_toTopOf="@+id/ivIntegralHead"
        tools:text="购买商品获得积分" />

    <TextView
        android:id="@+id/tvIntegralTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/color_9"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/tvIntegralType"
        app:layout_constraintTop_toBottomOf="@+id/tvIntegralType"
        tools:text="2020-03-29  22:34:56" />

    <TextView
        android:id="@+id/tvIntegral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_bf0008"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="+120" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/color_e2e2e2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvIntegralType"
        app:layout_constraintTop_toBottomOf="@+id/tvIntegralTime" />

</androidx.constraintlayout.widget.ConstraintLayout>