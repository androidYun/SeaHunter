<?xml version="1.0" encoding="utf-8"?>
<com.xhs.baselibrary.ui.photo_selector.view.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_color_efefef">

    <com.xhs.baselibrary.ui.photo_selector.view.SquaredImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside" />

    <ImageView
        android:id="@+id/checkmark"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="5.5dp"
        android:layout_marginTop="5.5dp"
        android:background="@drawable/selector_photo_choose"
        android:scaleType="centerInside"
        android:src="@mipmap/ic_checked" />

</com.xhs.baselibrary.ui.photo_selector.view.SquareFrameLayout>