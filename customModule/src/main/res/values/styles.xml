<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowBackground">@mipmap/bg_white</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:windowBackground">@mipmap/bg_white</item>
    </style>
    <!--Item布局的样式-->
    <style name="itemLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/shape_base_item_background</item>
        <item name="android:paddingStart">@dimen/default_padding</item>
        <item name="android:paddingEnd">@dimen/default_padding</item>
    </style>

    <style name="itemTitleStyle">
        <item name="android:layout_width">@dimen/item_title_height</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>

    </style>


    <style name="itemContentTextViewStyle">
        <item name="android:layout_width">@dimen/dp_100</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>


    <style name="itemContentEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/color_3</item>
        <item name="android:textColorHint">@color/color_9</item>
    </style>

    <style name="baseBtnStyle">
        <item name="android:layout_width">@dimen/dp_300</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_base_btn</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
</resources>
